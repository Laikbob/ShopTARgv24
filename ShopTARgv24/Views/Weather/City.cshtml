@model ShopTARgv24.Models.Weather.AccuWeatherViewModel

@{
    ViewData["Title"] = "Weather Result";
}

@section Styles {
    <link rel="stylesheet" href="~/css/weather.css" />
}

<h1 class="page-title">Weather Forecast</h1>

<div class="weather-result">
    <h2 class="city-name">@Model.CityName</h2>

    <div class="weather-grid">
        <div class="weather-item">
            <span>🌡 Min Temp</span>
            <strong>@Model.TempMinValue °C</strong>
        </div>

        <div class="weather-item">
            <span>🔥 Max Temp</span>
            <strong>@Model.TempMaxValue °C</strong>
        </div>

        <div class="weather-item">
            <span>⚠ Severity</span>
            <strong>@Model.Severity</strong>
        </div>

        <div class="weather-item">
            <span>📌 Category</span>
            <strong>@Model.Category</strong>
        </div>

        <div class="weather-item full">
            <span>☁ Weather</span>
            <strong>@Model.Text</strong>
        </div>
    </div>
</div>
