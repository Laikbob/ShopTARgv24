@model ShopTARgv24.Models.Weather.AccuWeatherSearchViewModel

@{
    ViewData["Title"] = "Search City";
}

@section Styles {
    <link rel="stylesheet" href="~/css/weather.css" />
}

<h1 class="page-title">Weather Forecast</h1>

<div class="weather-card">
    <form method="post">
        <h2 class="text-center mb-3">Search city</h2>

        <div class="form-group">
            <label asp-for="CityName"></label>
            <input asp-for="CityName"
                   class="form-control"
                   placeholder="Enter city name..." />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>

        <button asp-action="SearchCity"
                class="btn btn-primary w-100 mt-3">
            🔍 Search
        </button>
    </form>
</div>
