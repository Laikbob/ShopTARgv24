@model ShopTARgv24.Core.Domain.Cocktail

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<img src="@Model.ImageUrl" alt="@Model.Name" style="width:300px; border-radius:10px; margin-bottom:20px;" />

<p><strong>Kategoria:</strong> @Model.Category</p>
<p><strong>Klaasi tüüp:</strong> @Model.Glass</p>

<h3>Juhised</h3>
<p>@Model.Instructions</p>

<a asp-action="Index" class="btn btn-primary">⬅️ Tagasi</a>