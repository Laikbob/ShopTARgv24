@model ShopTARgv24.Models.Cocktail.CocktailSearchModel

<h1>Search Cocktail</h1>

<div class="container mt-4">
    <form method="post">
        <div class="form-group col-md-5">
            <label asp-for="CocktailName" style="font-family: Arial"></label>
            <input asp-for="CocktailName" class="form-control" placeholder="Enter cocktail name..." />
            <span asp-validation-for="CocktailName" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (Model.Drinks != null && Model.Drinks.Count > 0)
    {
        <h3 class="mt-4">Search Results:</h3>
        <div class="row">
            @foreach (var drink in Model.Drinks)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@drink.StrDrinkThumb" class="card-img-top" alt="@drink.StrDrink" />
                        <div class="card-body">
                            <h5 class="card-title">@drink.StrDrink</h5>
                            <p class="card-text"><strong>Category:</strong> @drink.StrCategory</p>
                            <p class="card-text"><strong>Glass:</strong> @drink.StrGlass</p>
                            <p class="card-text"><strong>Type:</strong> @drink.StrAlcoholic</p>
                            <p class="card-text">@drink.StrInstructions</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (Model.Drinks != null)
    {
        <p class="mt-4 text-danger">No cocktails found.</p>
    }
</div>