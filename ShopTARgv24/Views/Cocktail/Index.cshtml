@model ShopTARgv24.Models.

<h1> Search Cocktail</h1>

<div class="container">
	<form method="post">
        <div class="form-group col-md-offset-3 col-md-5">
            <h2>Search the Cocktail</h2>
            <label asp-for="CocktailName" style="font-family: Arial"></label>
            <input asp-for="CocktailName" class="form-control" />
            <span asp-validation-for="CocktailName" class="text-danger"></span>
        </div>
       </div>
       <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="Cocktail" asp-action="searchCocktail" class="btn btn-primary">Search</button>
        </div>
       </div>
	</form>
</div>